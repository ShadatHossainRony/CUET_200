{
  "dashboard": {
    "title": "CareForAll - Alerts & SLA Monitoring",
    "tags": ["careforall", "alerts", "sla", "health"],
    "timezone": "browser",
    "schemaVersion": 16,
    "version": 0,
    "refresh": "30s",
    "panels": [
      {
        "id": 1,
        "title": "Service Availability (Last 24h)",
        "type": "stat",
        "gridPos": {
          "x": 0,
          "y": 0,
          "w": 6,
          "h": 4
        },
        "targets": [
          {
            "expr": "avg_over_time(up{job=~\".*-service\"}[24h]) * 100",
            "legendFormat": "{{job}}",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {
                  "value": 0,
                  "color": "red"
                },
                {
                  "value": 99,
                  "color": "yellow"
                },
                {
                  "value": 99.9,
                  "color": "green"
                }
              ]
            }
          }
        }
      },
      {
        "id": 2,
        "title": "Current Active Alerts",
        "type": "stat",
        "gridPos": {
          "x": 6,
          "y": 0,
          "w": 6,
          "h": 4
        },
        "targets": [
          {
            "expr": "count(ALERTS{alertstate=\"firing\"})",
            "legendFormat": "Active Alerts",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {
                  "value": 0,
                  "color": "green"
                },
                {
                  "value": 1,
                  "color": "yellow"
                },
                {
                  "value": 5,
                  "color": "red"
                }
              ]
            }
          }
        }
      },
      {
        "id": 3,
        "title": "SLA Compliance (99.9% target)",
        "type": "gauge",
        "gridPos": {
          "x": 12,
          "y": 0,
          "w": 6,
          "h": 8
        },
        "targets": [
          {
            "expr": "(sum(rate(http_requests_total{status=~\"2..\"}[24h])) / sum(rate(http_requests_total[24h]))) * 100",
            "legendFormat": "Success Rate",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "min": 95,
            "max": 100,
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {
                  "value": 95,
                  "color": "red"
                },
                {
                  "value": 99,
                  "color": "yellow"
                },
                {
                  "value": 99.9,
                  "color": "green"
                }
              ]
            }
          }
        }
      },
      {
        "id": 4,
        "title": "Response Time SLA (P95 < 500ms)",
        "type": "gauge",
        "gridPos": {
          "x": 18,
          "y": 0,
          "w": 6,
          "h": 8
        },
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(http_request_duration_seconds_bucket[5m])) * 1000",
            "legendFormat": "P95 Latency (ms)",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "ms",
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {
                  "value": 0,
                  "color": "green"
                },
                {
                  "value": 500,
                  "color": "yellow"
                },
                {
                  "value": 1000,
                  "color": "red"
                }
              ]
            }
          }
        }
      },
      {
        "id": 5,
        "title": "Error Rate by Service",
        "type": "graph",
        "gridPos": {
          "x": 0,
          "y": 4,
          "w": 12,
          "h": 8
        },
        "targets": [
          {
            "expr": "(sum(rate(http_requests_total{status=~\"5..\"}[5m])) by (job) / sum(rate(http_requests_total[5m])) by (job)) * 100",
            "legendFormat": "{{job}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          {
            "format": "percent",
            "label": "Error %"
          }
        ],
        "thresholds": [
          {
            "value": 1,
            "colorMode": "critical",
            "op": "gt",
            "fill": true,
            "line": true
          }
        ]
      },
      {
        "id": 6,
        "title": "Service Down Alert",
        "type": "table",
        "gridPos": {
          "x": 0,
          "y": 12,
          "w": 12,
          "h": 6
        },
        "targets": [
          {
            "expr": "up{job=~\".*-service\"} == 0",
            "legendFormat": "{{job}} - {{instance}}",
            "refId": "A",
            "format": "table"
          }
        ]
      },
      {
        "id": 7,
        "title": "High Response Time Alert (> 1s)",
        "type": "table",
        "gridPos": {
          "x": 12,
          "y": 12,
          "w": 12,
          "h": 6
        },
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(http_request_duration_seconds_bucket[5m])) > 1",
            "legendFormat": "{{job}} - {{path}}",
            "refId": "A",
            "format": "table"
          }
        ]
      },
      {
        "id": 8,
        "title": "Payment Service Failure Rate",
        "type": "graph",
        "gridPos": {
          "x": 0,
          "y": 18,
          "w": 12,
          "h": 6
        },
        "targets": [
          {
            "expr": "(sum(rate(payment_transactions_total{status=\"failed\"}[5m])) / sum(rate(payment_transactions_total[5m]))) * 100",
            "legendFormat": "Failure Rate %",
            "refId": "A"
          }
        ],
        "yaxes": [
          {
            "format": "percent"
          }
        ],
        "thresholds": [
          {
            "value": 5,
            "colorMode": "critical",
            "op": "gt",
            "fill": true,
            "line": true
          }
        ],
        "alert": {
          "conditions": [
            {
              "evaluator": {
                "params": [5],
                "type": "gt"
              },
              "query": {
                "params": ["A", "5m", "now"]
              },
              "reducer": {
                "params": [],
                "type": "avg"
              },
              "type": "query"
            }
          ],
          "name": "High Payment Failure Rate",
          "message": "Payment failure rate exceeded 5%"
        }
      },
      {
        "id": 9,
        "title": "Database Connection Pool Exhaustion",
        "type": "graph",
        "gridPos": {
          "x": 12,
          "y": 18,
          "w": 12,
          "h": 6
        },
        "targets": [
          {
            "expr": "(mongodb_connections{state=\"current\"} / mongodb_connections{state=\"available\"}) * 100",
            "legendFormat": "Connection Usage %",
            "refId": "A"
          }
        ],
        "yaxes": [
          {
            "format": "percent"
          }
        ],
        "thresholds": [
          {
            "value": 80,
            "colorMode": "critical",
            "op": "gt",
            "fill": true,
            "line": true
          }
        ]
      },
      {
        "id": 10,
        "title": "Redis Memory Usage Alert",
        "type": "graph",
        "gridPos": {
          "x": 0,
          "y": 24,
          "w": 12,
          "h": 6
        },
        "targets": [
          {
            "expr": "(redis_memory_used_bytes / redis_memory_max_bytes) * 100",
            "legendFormat": "Memory Usage %",
            "refId": "A"
          }
        ],
        "yaxes": [
          {
            "format": "percent"
          }
        ],
        "thresholds": [
          {
            "value": 90,
            "colorMode": "critical",
            "op": "gt",
            "fill": true,
            "line": true
          }
        ]
      },
      {
        "id": 11,
        "title": "BullMQ Queue Backlog Alert",
        "type": "graph",
        "gridPos": {
          "x": 12,
          "y": 24,
          "w": 12,
          "h": 6
        },
        "targets": [
          {
            "expr": "bullmq_queue_waiting",
            "legendFormat": "{{queue}} - Waiting",
            "refId": "A"
          }
        ],
        "thresholds": [
          {
            "value": 1000,
            "colorMode": "critical",
            "op": "gt",
            "fill": true,
            "line": true
          }
        ]
      },
      {
        "id": 12,
        "title": "Disk Space Alert",
        "type": "gauge",
        "gridPos": {
          "x": 0,
          "y": 30,
          "w": 6,
          "h": 6
        },
        "targets": [
          {
            "expr": "100 - ((node_filesystem_avail_bytes{mountpoint=\"/\"} / node_filesystem_size_bytes{mountpoint=\"/\"}) * 100)",
            "legendFormat": "Disk Usage %",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {
                  "value": 0,
                  "color": "green"
                },
                {
                  "value": 80,
                  "color": "yellow"
                },
                {
                  "value": 90,
                  "color": "red"
                }
              ]
            }
          }
        }
      },
      {
        "id": 13,
        "title": "CPU Saturation Alert",
        "type": "gauge",
        "gridPos": {
          "x": 6,
          "y": 30,
          "w": 6,
          "h": 6
        },
        "targets": [
          {
            "expr": "100 - (avg(rate(node_cpu_seconds_total{mode=\"idle\"}[5m])) * 100)",
            "legendFormat": "CPU Usage %",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {
                  "value": 0,
                  "color": "green"
                },
                {
                  "value": 80,
                  "color": "yellow"
                },
                {
                  "value": 95,
                  "color": "red"
                }
              ]
            }
          }
        }
      },
      {
        "id": 14,
        "title": "Memory Saturation Alert",
        "type": "gauge",
        "gridPos": {
          "x": 12,
          "y": 30,
          "w": 6,
          "h": 6
        },
        "targets": [
          {
            "expr": "(1 - (node_memory_MemAvailable_bytes / node_memory_MemTotal_bytes)) * 100",
            "legendFormat": "Memory Usage %",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {
                  "value": 0,
                  "color": "green"
                },
                {
                  "value": 85,
                  "color": "yellow"
                },
                {
                  "value": 95,
                  "color": "red"
                }
              ]
            }
          }
        }
      },
      {
        "id": 15,
        "title": "Pledge Payment Failure Spike",
        "type": "graph",
        "gridPos": {
          "x": 18,
          "y": 30,
          "w": 6,
          "h": 6
        },
        "targets": [
          {
            "expr": "sum(rate(pledge_payment_processed_total{status=\"failed\"}[5m]))",
            "legendFormat": "Failed Pledge Payments/sec",
            "refId": "A"
          }
        ],
        "thresholds": [
          {
            "value": 10,
            "colorMode": "critical",
            "op": "gt",
            "fill": true,
            "line": true
          }
        ]
      },
      {
        "id": 16,
        "title": "Alert History (Last 24h)",
        "type": "table",
        "gridPos": {
          "x": 0,
          "y": 36,
          "w": 24,
          "h": 8
        },
        "targets": [
          {
            "expr": "ALERTS{alertstate=\"firing\"}",
            "legendFormat": "{{alertname}} - {{severity}}",
            "refId": "A",
            "format": "table"
          }
        ]
      }
    ]
  }
}
